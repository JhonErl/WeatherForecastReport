<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.weatherforecastreport.johnerl.wfr.ReportActivity">
    <ImageView
        android:id="@+id/iconDaily2"
        android:src="#fa43cc"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/dateToday2"
        android:textSize="20sp"
        android:text="date"
        android:layout_below="@+id/iconDaily2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/day2"
        android:layout_below="@+id/dateToday2"
        android:textSize="16sp"
        android:text="day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    <TextView
        android:id="@+id/min2"
        android:textSize="16sp"
        android:text="min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day2"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/max2"
        android:textSize="16sp"
        android:text="max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/min2"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/night2"
        android:textSize="16sp"
        android:text="night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/max2"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/eve2"
        android:textSize="16sp"
        android:text="even"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/night2"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/morn2"
        android:textSize="16sp"
        android:text="morn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eve2"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/pressure2"
        android:textSize="16sp"
        android:text="pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/morn2"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/humit2"
        android:textSize="16sp"
        android:text="humit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pressure2"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/description2"
        android:textSize="16sp"
        android:text="description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/humit2"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/speed2"
        android:textSize="16sp"
        android:text="speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description2"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/deg2"
        android:textSize="16sp"
        android:text="deg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speed2"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/clouds2"
        android:textSize="16sp"
        android:text="cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deg2"
        android:layout_centerInParent="true"/>
</RelativeLayout>
